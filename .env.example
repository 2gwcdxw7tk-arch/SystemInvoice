# Variables de entorno para Facturador
# Copia este archivo a .env.local y ajusta los valores para tu entorno.

# Identidad de la empresa
NEXT_PUBLIC_COMPANY_NAME="Facturador POS"
NEXT_PUBLIC_COMPANY_ACRONYM=FAC
NEXT_PUBLIC_CLIENT_LOGO_URL="/logos/demo.svg"

# URL base (se usa para redirecciones y generación de enlaces absolutos)
NEXT_APP_URL="http://localhost:3000"

# Configuración monetaria
NEXT_PUBLIC_LOCAL_CURRENCY_CODE=MXN
NEXT_PUBLIC_LOCAL_CURRENCY_SYMBOL=$
NEXT_PUBLIC_FOREIGN_CURRENCY_CODE=USD
NEXT_PUBLIC_FOREIGN_CURRENCY_SYMBOL=$

# Entorno de Node
NODE_ENV=development

# IVA configurable (acepta 0.16 o 16 para 16%)
NEXT_PUBLIC_VAT_RATE=15

# Cargo de servicio (acepta 0.10 o 10 para 10%)
NEXT_PUBLIC_SERVICE_RATE=10

# Configuración de PostgreSQL
DB_CONNECTION_STRING="postgres://postgres:super_seguro@localhost:5432/facturador"
MOCK_DATA=false
# Cuando es true, se usan datos simulados en memoria y no se requiere PostgreSQL.
# Ideal para desarrollo sin afectar datos reales.

# Sesiones
SESSION_SECRET="cambia-esta-clave-super-secreta-32caracteres"

# Listas de precio (afecta catálogo y facturación)
DEFAULT_PRICE_LIST_CODE=BASE

# Almacén por defecto para consumos de facturación (fallback si el artículo no define uno)
DEFAULT_SALES_WAREHOUSE_CODE=PRINCIPAL
